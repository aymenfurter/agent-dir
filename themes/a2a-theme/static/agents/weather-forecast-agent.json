{
  "name": "Weather Forecast Agent",
  "description": "AI agent that provides detailed weather forecasts and climate information for any location worldwide",
  "url": "https://weather-agent.example.com/a2a",
  "version": "2.0.1",
  "protocolVersion": "0.2.5",
  "capabilities": {
    "streaming": false,
    "pushNotifications": true
  },
  "defaultInputModes": ["text", "application/json"],
  "defaultOutputModes": ["application/json", "text/plain"],
  "skills": [
    {
      "name": "getCurrentWeather",
      "description": "Get current weather conditions for a specific location",
      "input": {
        "type": "object",
        "properties": {
          "location": { "type": "string", "description": "City name, ZIP code, or coordinates" },
          "units": { "type": "string", "enum": ["metric", "imperial", "kelvin"], "default": "metric" }
        },
        "required": ["location"]
      },
      "output": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "temperature": { "type": "number" },
          "humidity": { "type": "number" },
          "conditions": { "type": "string" },
          "windSpeed": { "type": "number" },
          "pressure": { "type": "number" }
        }
      }
    },
    {
      "name": "getWeatherForecast",
      "description": "Get weather forecast for the next 7 days",
      "input": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "days": { "type": "number", "minimum": 1, "maximum": 7, "default": 5 },
          "units": { "type": "string", "enum": ["metric", "imperial", "kelvin"], "default": "metric" }
        },
        "required": ["location"]
      },
      "output": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "forecast": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": { "type": "string" },
                "high": { "type": "number" },
                "low": { "type": "number" },
                "conditions": { "type": "string" },
                "precipitation": { "type": "number" }
              }
            }
          }
        }
      }
    }
  ],
  "contact": {
    "name": "Weather API Team",
    "email": "support@weatherapi.com"
  },
  "tags": ["weather", "forecast", "climate", "location", "notifications"]
}
