{
  "name": "Slack Workflow Automator",
  "description": "AI agent that automates Slack workflows, manages channels, and provides intelligent notifications",
  "url": "https://slack-automator.example.com/a2a",
  "version": "1.3.2",
  "protocolVersion": "0.2.5",
  "capabilities": {
    "streaming": false,
    "pushNotifications": true
  },
  "defaultInputModes": ["text", "application/json"],
  "defaultOutputModes": ["text", "application/json"],
  "skills": [
    {
      "name": "sendChannelMessage",
      "description": "Sends formatted messages to Slack channels with rich formatting and attachments",
      "input": {
        "type": "object",
        "properties": {
          "channel": { "type": "string" },
          "message": { "type": "string" },
          "format": { "type": "string", "enum": ["plain", "markdown", "rich"] }
        },
        "required": ["channel", "message"]
      },
      "output": {
        "type": "object",
        "properties": {
          "message_id": { "type": "string" },
          "timestamp": { "type": "string" }
        }
      }
    },
    {
      "name": "createWorkflow",
      "description": "Creates automated Slack workflows based on triggers and conditions",
      "input": {
        "type": "object",
        "properties": {
          "trigger": { "type": "string" },
          "conditions": { "type": "array" },
          "actions": { "type": "array" }
        },
        "required": ["trigger", "actions"]
      },
      "output": {
        "type": "object",
        "properties": {
          "workflow_id": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    }
  ],
  "contact": {
    "name": "Slack Automation Team",
    "email": "automation@slackbot.com"
  },
  "tags": ["slack", "automation", "workflow", "notifications", "collaboration"]
}
